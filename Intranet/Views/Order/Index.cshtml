@model IEnumerable<Data.SelectVMs.OrderVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Zamówienia</h1>

<p>
    <a class="card-body" asp-action="Create"><button type="button" class="btn btn-primary">Dodaj nowe</button></a>
</p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    Użytkownik
                </th>
                <th>
                    Data utworzenia zamówienia
                </th>
                <th>
                    Status zamówienia
                </th>
                <th>
                    Nazwa
                </th>
                <th>
                    E-Mail
                </th>
                <th>
                    Numer telefonu
                </th>
                <th>
                    Adres
                </th>
                <th>
                    Sposób płatności
                </th>
                <th>
                    Zapłacone
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentMethod)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPaid)
                </td>
                <td>
                    <a class="card-body" asp-area="" asp-controller="Order" asp-action="Edit" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Edytuj</button></a>
                    <a class="card-body" asp-area="" asp-controller="Order" asp-action="Delete" asp-route-id="@item.Id"><button type="button" class="btn btn-primary">Usuń</button></a>
                </td>
            </tr>
    }
        </tbody>
    </table>
