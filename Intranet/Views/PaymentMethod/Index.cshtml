@model IEnumerable<Data.SelectVMs.PaymentMethodVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Sposoby płatności</h1>

<p>
    <a class="card-body" asp-action="Create"><button type="button" class="btn btn-primary">Dodaj nowy sposób płatności</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Nazwa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                    <a class="" asp-area="" asp-controller="PaymentMethod" asp-action="Edit" asp-route-id="@item.Id"><button class="btn btn-primary">Edytuj</button></a>
                    <a class="" asp-area="" asp-controller="PaymentMethod" asp-action="Delete" asp-route-id="@item.Id"><button class="btn btn-primary">Usuń</button></a>

            </td>
        </tr>
}
    </tbody>
</table>
