@model IEnumerable<Data.SelectVMs.CategoryVM>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid text-center">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="container-fluid align-items-center col-md-3 mb-3">
                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="@item.Name.Replace(" ", "")">
                        <img class="category_thumbnail" src="@item.ImageURL" alt="@item.Name" />
                        @Html.DisplayFor(modelItem => item.Name)
                </a>
            </div>
        }
    </div>
</div>
